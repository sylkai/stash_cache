<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekeclectic.android.stashcache" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_stashcache"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppSubScreens" >
        <meta-data android:name="com.google.android.backup.api_key"
            android:value="your_backup_service_key" />
        <activity
            android:name=".StashSplashScreen"
            android:theme="@style/Theme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StashOverviewActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".StashPatternPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
        <activity
            android:name=".StashEmbellishmentPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
        <activity
            android:name=".StashFabricPagerActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
        <activity
            android:name=".StashThreadPagerActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
        <activity
            android:name=".StashPreferencesActivity"
            android:label="@string/preferences"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
        <activity
            android:name=".StashHelpActivity"
            android:label="@string/app_help"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewActivity" />

        </activity>
    </application>

</manifest>
