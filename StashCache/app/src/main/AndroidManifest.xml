<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekeclectic.android.stashcache" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="11" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_stashcache"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StashSplashScreen"
            android:theme="@style/Theme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StashOverviewActivity">
        </activity>
        <activity
            android:name=".StashPatternPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewPagerActivity" />

        </activity>
        <activity
            android:name=".StashEmbellishmentPagerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewPagerActivity" />

        </activity>
        <activity
            android:name=".StashFabricPagerActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewPagerActivity" />

        </activity>
        <activity
            android:name=".StashThreadPagerActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".StashOverviewPagerActivity" />

        </activity>
    </application>

</manifest>
