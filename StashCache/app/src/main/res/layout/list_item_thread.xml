<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated">

    <TextView
        android:id="@+id/thread_list_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="8dp"
        android:fontFamily="sans-serif-thin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_toLeftOf="@id/thread_list_item_quantity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thread_list_item_flossIdTextView"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Floss Name"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thread_list_item_flossTypeTextView"
            android:layout_below="@id/thread_list_item_flossIdTextView"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Thread Type" />

    </LinearLayout>

</RelativeLayout>
